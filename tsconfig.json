{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"],
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src", "webpack.config.ts"]
}
